<!DOCTYPE html>
<html>

<head>

    <title>Index Page</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src="/js/script.js" defer>

    </script>
</head>

<body>
    <script>function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth' // Smooth scrolling effect
            });
        }</script>
    <label class="switch">
        <input type="checkbox" id="themeSwitch">
        <span class="slider round"></span>
    </label>
    <div id="allPogsTab" class="tab active">
        <div id="title">
            <h2>Pogipedia</h2>
        </div>

        <!-- Color Guide -->

        <div id="color-guide" class="guide light-mode">
            <h3>Color Guide</h3>
            <div class="row">
                <div class="item">
                    <div id="trashBox" class="box"></div>
                    <span>Trash</span>
                </div>
                <div class="item">
                    <div id="commonBox" class="box"></div>
                    <span>Common</span>
                </div>
                <div class="item">
                    <div id="uncommonBox" class="box"></div>
                    <span>Uncommon</span>
                </div>
                <div class="item">
                    <div id="rareBox" class="box"></div>
                    <span>Rare</span>
                </div>
                <div class="item">
                    <div id="mythicBox" class="box"></div>
                    <span>Mythic</span>
                </div>
                <div class="item">
                    <div id="unknownBox" class="box"></div>
                    <span>Unknown</span>
                </div>
            </div>
        </div>

        <div id="tag-guide" class="guide light-mode">
            <h3>Tag Guide</h3>
            <div class="row">
                <div class="item">
                    <div class="box" id="classPogBox" title="Pogs made to represent the class of a certain year.">
                        <span>Class Pog</span>
                    </div>
                </div>
                <div class="item">
                    <div class="box" id="pokepogBox" title="Pogs made for the PokePogs game. Includes both pogs and slammers.">
                        <span>PokePogs</span>
                    </div>
                </div>
                <div class="item">
                    <div class="box" id="teacherCreatedBox" title="Pogs designed and made by Mr. Smith, typically for fun or for a special gimmick.">
                        <span>Teacher Created</span>
                    </div>
                </div>
                <div class="item">
                    <div class="box" id="studentCreatedBox" title="Pogs designed by students. Students can pay Mr. Smith pogs to print out new pogs they design.">
                        <span>Student Created</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="search-bar">
            <input type="text" id="searchIdInput" placeholder="Search by ID">
            <input type="text" id="searchNameInput" placeholder="Search by Name">
            <input type="text" id="searchSerialInput" placeholder="Search by Serial">
            <input type="text" id="searchTagsInput" placeholder="Search by Tags">
            <button onclick="searchPogs()">Search</button>
            <button onclick = "clearSearchInputs()">Clear</button>
            <select id="sortOptions" onchange="handleSort()">
                <option value="idAsc">Sort by ID (Less to Greatest)</option>
                <option value="idDesc">Sort by ID (Greatest to Less)</option>
                <option value="nameAsc">Sort by Name (A to Z)</option>
                <option value="nameDesc">Sort by Name (Z to A)</option>
                <option value="serial">Sort by Serial</option>
                <option value="color">Sort by Color</option>
                <option value="tags">Sort by Tags</option>
                <option value="upvotesDesc">Sort by Upvotes (Most to Least)</option>
                <option value="upvotesAsc">Sort by Upvotes (Least to Most)</option>
                <option value="downvotesDesc">Sort by Downvotes (Most to Least)</option>
                <option value="downvotesAsc">Sort by Downvotes (Least to Most)</option>
            </select>
        </div>
        <table id="allPogsTable" border="1" style="margin: 0 auto;">
            <thead>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>

    <!-- Color Guide -->
    <!-- Modal for displaying pog details -->
    <div id="pogDetailsModal" class="modal">
        <div class="modal-content" id="pogDetailsContent">
            <!-- Details will be populated here -->
        </div>
    </div>
</body>
<footer>

    <button onclick="scrollToTop()" class="back-to-top">Back to Top</button>
</footer>

</html>

</body>